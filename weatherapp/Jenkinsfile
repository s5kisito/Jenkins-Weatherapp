pipeline {
    agent any

    options {
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '5', numToKeepStr: '5')
    }

    stages {
        stage('Build') {
            steps {
                script {
                    catchError {
                        // Use the container directive for running Docker within a Docker
                        container('golang:alpine') {
                            sh 'go build -o /go/bin/app ./weatherapp/auth/src/main'
                        }
                    }
                }
            }
        }

        stage('Print Working Directory') {
            steps {
                sh 'pwd'
            }
        }

        stage('List Directory Contents') {
            steps {
                sh 'ls -al'
            }
        }
    }

    post {
        always {
            // Archive or publish build artifacts
            archiveArtifacts(artifacts: '/go/bin/app')
        }
    }
}
